[WAEServer]
#NetworkModelSource can be PLANFILE or WMD(preferred)
NetworkModelSource = WMD
OPMRestAPIServer = 127.0.0.1:8080
OPMRestAPILspConfigNimoNetworkName = pccw_lsp_cfg
OPMRestAPIFinalNetworkName = pccw_agg
Topo-IGP-NIMO-NetworkName = pccw_igp
Topo-BGPLS-XTC-NIMO-NetworkName = pccw_bgpls_for_portal 
archive_dir = /opt/wae/WL_ARCH/

OPMRestAPIUserName = admin
OPMRestAPIUserPass = admin

################### Mate commands absolute path #######################
mate_sql_cmd = /opt/wae/client/software/mate/current/bin/mate_sql
mate_get_show_cmd = /opt/wae/client/software/mate/current/bin/get_show
mate_archive_insert_cmd = /opt/wae/client/software/mate/current/bin/archive_insert

[WAEPortal]
###Parameters used during delay(latency) and reservable BW computation#
############ use mate_auth_init to generate auth.enc ##################
## session_type can be ssh| telnet| mixed ###
session_type_for_ping = mixed
delay_between_ssh_n_telnet = 60
custom_login_prompt = "username new-ACS"
auth_file = /opt/wae/.cariden/etc/auth.enc
suffixToRemoveInDeviceName = .pccwbtn.net
InterfaceMaxAllowedBWForResBWComputation = 80
DevicePingOutputDir = /opt/wae_portal/trafficEngineering/data/delays

############ File containing ping commands to compute delays ##########
############ across network, generated by network-delay-cmd-generator##
PingCommandsFile = /opt/wae_portal/trafficEngineering/data/InterfaceDelayCommands.txt

############ File containing actual interface delays ################
############ across network, generated byportal-plan-file-generator##
InterfaceDelaysFile = /opt/wae_portal/trafficEngineering/data/FinalInterfaceDelays.txt

############ Plan Files generated and used at variuos stages ##########
PlanFileWaeGenerated = /opt/wae_portal/trafficEngineering/data/pccw_plan_raw.pln
PlanFileWithDelay = /opt/wae_portal/trafficEngineering/data/pccw_plan_delay.pln
PlanFileWithDelaynResBW = /opt/wae_portal/trafficEngineering/data/pccw_plan_delay_bw.pln

##### Expeced format SrcNode:SrcInterface::DestNode:DestInterface #####
ExclTransLinksFile = /opt/wae_portal/trafficEngineering/data/TransContinental_links.txt


######### Tunnel IDs to be used for Provisioning ######################
TunnelIDRange= 10000-11000
NextTunnelIdFile = /opt/wae_portal/trafficEngineering/data/nextTunnel.id


########## Congestion detection and Report paramter (BW, recurrance) ####
BandWidthCongestionThreshold = 80
congestionRecurrCountb4Reporting = 2
congestedTunnelsFile = /opt/wae_portal/trafficEngineering/data/CongestedTunnels.txt

